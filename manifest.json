{
  "manifest_version": 3,
  "name": "Copy Bear",
  "version": "1.16",
  "description": "Quickly copy page titles and URLs with customizable formatting, as easy as a bear grabbing honey.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Copy title and URL to clipboard"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Activate Copy Title & URL extension"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon-16x16.png",
    "32": "icon-32x32.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "launch_custom_url.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
